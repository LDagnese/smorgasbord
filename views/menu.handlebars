<div class="container">
  <div class="restaurant-dish card mt-4 mx-auto" style="max-width: 800px;">
    <div class="row">
      <div class="col-md-4">
        <img
          src={{cloudinary_url 100 200 restaurant.picture_id}}
          class="card-img"
          alt="placeholder"
        />
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h4 class="restaurant-title tex-center">{{restaurant.name}}</h4>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="center card-deck">
  <div class="m-5 p-5 row">
    {{#each restaurant.dishes as |dish|}}
      <div class="col-12 col-lg-4">
        <img
          class="card-img-top rounded mt-4 mx-auto d-block"
          src={{cloudinary_url 200 200 picture_id}}
          alt="Card image cap"
        />
        <div class="dish-card card-body border">
          <h2 class="name">{{name}}</h2>
          <p class="price">${{price}}.00</p>
          <p>{{description}}</p>
          <div>
            <button type="submit" id={{id}} class="add-to-cart">Add to Cart</button>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>

