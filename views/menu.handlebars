{{#each restaurant.dishes as |dish|}}
<div class="container">
<div class="card mb-3 mx-auto" style="max-width: 1000px;">
  <div class="row no-gutters">
    <div class="col-md-4">
      <img src="" class="card-img" alt="Image placeholder">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h4 class="card-title">{{name}}</h4>
        <p class="card-text">${{price}}.00</p>
        <p class="card-text">{{description}}</p>
        <a href="#" class="btn btn-danger">Add Cart</a>
      </div>
    </div>
  </div>
</div>
</div>
{{/each}}
