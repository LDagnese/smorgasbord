<div class="login-to-smorgasbord d-flex flex-column align-items-center mt-4">
  <h2 class="login-to mt-4 rounded">Login to Smörgåsbord</h2>
</div>

<div class="d-flex flex-column align-items-center mt-4">
  <p class="login-signup-agreement">By logging in, you agree to Smörgåsbord's
    <em class="text-muted">Terms of Service</em>
    and
    <em class="text-muted">Privacy Policy</em>.</p>
</div>

<div class="d-flex flex-column align-items-center mt-2">
  <form class="login-form mt-2 mb-4">
    <div>
      <input
        type="text"
        class="form-control"
        id="email-login"
        placeholder="Email"
      />
    </div>
    <div>
      <input
        type="password"
        class="form-control"
        id="password-login"
        placeholder="Password"
      />
    </div>
    <div>
      <p class="text-muted float-right mb-4">Forgot Password?</p>
      <button
        type="submit"
        class="btn-login text-center btn-lg btn-block"
      >Login</button>
    </div>
  </form>
</div>

<div class="signup-smorgasbord d-flex flex-column align-items-center">
  <h2 class="signup-to mt-4 rounded">Sign up for Smörgåsbord</h2>
</div>

<div class="d-flex flex-column align-items-center mt-4">
  <p class="login-signup-agreement">By continuing, you agree to Smörgåsbord's
    <em class="text-muted">Terms of Service</em>
    and
    <em class="text-muted">Privacy Policy</em>.</p>
</div>

<div class="d-flex flex-column align-items-center mb-4">
  <form class="signup-form mt-2">
    <div>
      <input
        type="text"
        class="form-control"
        id="name-signup"
        placeholder="Name"
      />
    </div>
    <div>
      <input
        type="text"
        class="form-control"
        id="email-signup"
        placeholder="Email"
      />
    </div>
    <div>
      <input
        type="password"
        class="form-control"
        id="password-signup"
        placeholder="Password"
      />
    </div>
    <div>
      <button
        type="submit"
        class="btn-signup text-center btn-lg btn-block mt-2 mb-2"
      >Sign Up</button>
    </div>
  </form>
</div>

<script src="/javascript/login.js"></script>